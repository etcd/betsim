{
  "name": "betsim",
  "version": "1.0.0",
  "main": "index.ts",
  "repository": "git@github.com:etcd/betsim.git",
  "license": "MIT",
  "scripts": {
    "build": "esbuild source/lib/*.ts --bundle --outdir=build --format=esm --minify",
    "simulate": "ts-node source/index.ts",
    "typecheck": "tsc --noEmit --listFiles",
    "clean:build": "rimraf build",
    "clean:node_modules": "rimraf node_modules"
  },
  "devDependencies": {
    "esbuild": "^0.17.4",
    "rimraf": "^4.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
